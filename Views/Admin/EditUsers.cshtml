@model Users
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditUsers" asp-controller="Admin" method="POST" class="needs-validation"
            enctype="multipart/form-data" novalidate>
            <div class="form-group">
                <label asp-for="Name">İsim</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="İsim" required>
                <div class="invalid-feedback">
                    Lütfen Kontrol Ediniz!
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Surname">Soyisim</label>
                <input type="text" class="form-control" asp-for="Surname" placeholder="Soyisim" required>
                <div class="invalid-feedback">
                    Lütfen Kontrol Ediniz!
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Institution">Enstitü</label>
                <input type="text" class="form-control" asp-for="Institution" placeholder="Enstitü" required>
                <div class="invalid-feedback">
                    Lütfen Kontrol Ediniz!
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control" asp-for="Email" placeholder="Email" required>
                <div class="invalid-feedback">
                    Lütfen Kontrol Ediniz!
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifre</label>
                <input type="text" class="form-control" asp-for="Password" placeholder="Şifre" required>
                <div class="invalid-feedback">
                    Lütfen Kontrol Ediniz!
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PicturePath" class="form-label">Resim Seç</label>
                <input asp-for="PicturePath" class="form-control" type="file" required>
                <div class="invalid-feedback">
                    Lütfen Kontrol Ediniz!
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Role">Rol</label>
                @* dil değeri name olarak atandı *@
                <select asp-for="Role" asp-items="@(new SelectList(ViewBag.roles,"Id","Name"))" class="form-select"
                    aria-label="Default select example">
                    <option selected>Lütfen Rol seçiniz</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
    <div class="col-md-4 ml-auto">
        @await Html.PartialAsync("_PleaseRead", "Kullanıcı")
    </div>
</div>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>