@{
    Layout = "~/Views/Admin/_Layout.cshtml";
    var title = ViewData["Title"];
}

<h1>
    @title
</h1>
<hr>

@await Html.PartialAsync("_InformationTable", "Genel Ayarlar")

@model IEnumerable<WebProject.Models.GenSetting>
<table id="table" class="table table-striped table-dark table-bordered table-hover" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th>İd</th>
            <th>Website Adı</th>
            <th>Merkez Adresi</th>
            <th>Website Adresi</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.WebsiteName</td>
                <td>@item.Address</td>
                <td>@item.WebAddress</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditGenSettings" asp-route-id="@item.Id"
                    class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
