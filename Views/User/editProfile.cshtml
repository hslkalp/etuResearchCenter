@model Users
@{
  Layout = "~/Views/User/_Layout.cshtml";
}

<div class="mx-auto w-75">
  <form asp-action="editProfile" asp-controller="User" method="POST" class="needs-validation"
    enctype="multipart/form-data" novalidate>
    <div class="form-group">
      <label asp-for="Name" class="mb-2">İsim</label>
      <input type="text" class="form-control" asp-for="Name" placeholder="İsim" required>
      <div class="invalid-feedback">
        Lütfen Kontrol Ediniz!
      </div>
    </div>
    <div class="form-group">
      <label asp-for="Surname" class="mb-2">Soyisim</label>
      <input type="text" class="form-control" asp-for="Surname" placeholder="Soyisim" required>
      <div class="invalid-feedback">
        Lütfen Kontrol Ediniz!
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
  </form>
</div>