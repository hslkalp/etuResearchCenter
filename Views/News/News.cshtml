@model IEnumerable<WebProject.Models.News>
@{
    var cultureInfo = new System.Globalization.CultureInfo("tr-TR");
}
<div class="news-wrapper">
    <div class="content-block">
        <div class="content-block1">
            <h2 class="news-wrapper-title">
                haberler
                <svg class="icon icon-newspaper">
                    <use xlink:href="#icon-newspaper"></use>
                </svg>
            </h2>
            <p class="news-wrapper-sub-title">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Neque, est?</p>
        </div>
        <div class="content-block2">
            @foreach (var item in Model.Take(3))
            {
                <div class="news">
                    <div role="img" class="news-img" style="background-image: url(@item.PicturePath);"></div>
                    <h3 class="news-title">
                        <a asp-controller="News" asp-action="NewsDetails" asp-route-id="@item.Id">@item.Title</a>
                    </h3>
                    <p class="news-text">
                        @if (item.ShortText.Length > 50)
                        {
                            @item.ShortText.Substring(0,@item.ShortText.Length / 3)
                        }
                        else
                        {
                            @item.ShortText
                        }
                    </p>
                    <p class="news-meta">
                        <time
                        date-time="@item.AdditionDate">@item.AdditionDate.ToString(cultureInfo.DateTimeFormat.LongDatePattern,cultureInfo)</time>
                    </p>
                </div>
            }
        </div>
    </div>
</div>
